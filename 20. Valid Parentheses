```
class Solution {
public:
    bool isValid(string s){
        if(s.size() == 0) {
            return true;
        }
        stack<char> st;
        for(int i = 0; i < s.size(); i++) {
            switch(s[i]){
                case '{': case '[': case '(':
                    st.push(s[i]); break;
                case '}':
                    if(st.size() == 0) return false;
                    if(st.top() == '{') st.pop(); 
                    else return false; break;
                case ']':
                    if(st.size() == 0) return false;
                    if(st.top() == '[') st.pop(); 
                    else return false; break;
                case ')':
                    if(st.size() == 0) return false;
                    if(st.top() == '(') st.pop();
                    else return false; break;
                default: return false;
            }
        }
        return st.empty();
    }
};
```
